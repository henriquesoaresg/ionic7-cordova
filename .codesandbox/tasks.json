      "command": "npm run start",
      "runAtStart": false,
      "preview": {
        "port": 4200
      }
    },
    "build": {
      "name": "build",
      "command": "npm run build",
      "runAtStart": false
    },
    "watch": {
      "name": "watch",
      "command": "npm run watch",
      "runAtStart": false
